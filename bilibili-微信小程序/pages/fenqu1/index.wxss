page {
  height: 100%;
}

.swiper-tab {
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  box-shadow: 2px 2px 5px #b0b0b0;
  background-color: white;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
}

swiper {
  padding-top: 88rpx;
  font-weight: bold;
  font-size: 45rpx;
}

.swiper-tab-item {
  width: 20%;
  color: #434343;
}

.active {
  color: hsl(350, 93%, 73%);
  border-bottom: 8rpx solid hsl(350, 93%, 73%);
}

