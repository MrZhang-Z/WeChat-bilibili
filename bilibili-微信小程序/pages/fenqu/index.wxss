/* pages/bilibili/fenqu.wxss */
.box{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.box-1{
  display: flex;        /*弹性布局*/
  margin-top: 10rpx;
  padding: 18px;
  flex-wrap: wrap;     /*允许换行*/
}
.box-2{
  width: 25%;      /*一行排四个icon，每个icon占比25%*/
  height: 220rpx;
  padding: 35rpx;     /*icon与icon的距离*/
  justify-content: center;
  box-sizing: border-box;
  text-align: center;
  background-color: white;
}
image{
  top:0;
  width:45px;   /*25%的100%*/
  height: 45px;
}
text{
  text-align: center;
  font-size: 25rpx;
  font-family: 微软雅黑,宋体;
}